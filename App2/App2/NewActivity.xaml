<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.NewActivity">
    <StackLayout HorizontalOptions="Center" Margin="10">
        <Entry x:Name="activityName" Placeholder="Activity name" WidthRequest="200"/>
        <Picker x:Name="categoryList" Title="Categories" WidthRequest="200"/>
        <Button Text="Save" Clicked="OnSaveNewActivity" BackgroundColor="#2196f3" TextColor="White" BorderRadius="12"/>
    </StackLayout>
    
</ContentPage>