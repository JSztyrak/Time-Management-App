<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.ActivitiesChoicePage">

    <ListView x:Name="activitiesListView" ItemSelected="OnSelectActivity">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell ImageSource="{Binding ImgSrc}" Text="{Binding Name}" Detail="{Binding Category}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>